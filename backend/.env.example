# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USER=ebr_user
DB_PASSWORD=ebr_password
DB_NAME=ebr_db

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Server Configuration
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
API_PREFIX=/api/v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
DEFAULT_TENANT_SLUG=demo

# OPC-UA Configuration
OPCUA_ENDPOINT=opc.tcp://localhost:4840
OPCUA_APPLICATION_NAME=DicodeEBR
OPCUA_SECURITY_POLICY=None
OPCUA_MESSAGE_SECURITY_MODE=None

# PDF Generation
PDF_STORAGE_PATH=./storage/pdfs
PDF_TEMPLATE_PATH=./templates

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Compliance
ENABLE_E_SIGNATURES=true
REQUIRE_DOUBLE_SIGN_OFF=true
AUDIT_RETENTION_DAYS=2555

# Email Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=noreply@dicode.tech
